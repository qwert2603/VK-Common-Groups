<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/images_caching">
        <SwitchPreference android:key="is_cache_images_on_device"
            android:title="@string/images_caching"
            android:summary="@string/cache_images"
            android:defaultValue="true"/>

        <Preference android:key="clear_images_cache_on_device"
            android:title="@string/clear_cache"
            android:summary="@string/clear_images_cache_on_device"/>
    </PreferenceCategory>


    <PreferenceCategory android:title="@string/exit">
        <Preference android:key="log_out"
            android:title="@string/log_out"/>
    </PreferenceCategory>

</PreferenceScreen>